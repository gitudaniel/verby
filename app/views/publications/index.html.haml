= render 'layouts/header'
= render  'publications/gmodal'
%br
%br
  -if signed_in?
    = link_to 'New Publication', new_publication_path ,:class => "ui small blue button"
%br

.ui.special.cards  
  - @publications.each do |publication|
    .ui.black.card{:style => "float:left !important ; margin-right:5px !important; margin-left:15px !important;"}
      .content
        .ui.black.header
          = link_to publication.title , publication 
      .extra.content
        = publication.genre
        .right.floated 
          = publication.tags
      .extra.content
        %i.spy.icon
        = link_to publication.pen_name , publications_view_path(publication.writer_id)
      .extra.content  
        .inline.field
        
          -if writer_signed_in? && current_writer.id == publication.writer_id || writer_signed_in? && current_writer.email == publication.email || superuser_signed_in?
           
            = link_to 'Edit', edit_publication_path(publication) ,:class => "ui small button"
            = link_to 'Delete', publication, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "ui small red button"

